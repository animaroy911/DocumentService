@page
@model DocumentService.Pages.Books.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row" style="height:100%;">
    <div class="col-12" style="height:100%;">
        <form method="post" style="height:100%;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.Id" />
            <div class="form-group">
                <label asp-for="Book.Name" class="control-label"></label>
                <input asp-for="Book.Name" class="form-control" />
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="height: calc(100% - 300px);">
                <label class="control-label">Segment Options</label>
                <input filter-for="segment-options" placeholder="Filter" class="form-control" style="margin-bottom:15px;" />
                <ul id="segment-options" class="list-group sortable" style="height: calc(100% - 90px);overflow-y: scroll;border: 1px solid #ddd;">
                    @for (int i = 0; i < Model.SegmentOptions.Count; i++)
                    {
                        <li class="list-group-item" style="padding:0px;border-width:1px 0; border-radius:0px;"><label style="margin:0;padding:10px 20px;width:100%;"><input asp-for="@Model.SegmentOptions[i].Checked" type="checkbox" />@Model.SegmentOptions[i].Header</label><input type="hidden" asp-for="@Model.SegmentOptions[i].Id" /><input class="sortable-order" type="hidden" asp-for="@Model.SegmentOptions[i].Order" /></li>
                    }
                </ul>
            </div>
            <div class="form-group">
                <label asp-for="Book.Owner" class="control-label"></label>
                <input asp-for="Book.Owner" disabled class="form-control" />
                <span asp-validation-for="Book.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
