@page
@model DocumentService.Pages.HandyMembers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Handy Member</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-dfault" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.HandyMember[0].LastName)
                </a>
            </th>
            
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CitySort"
                   asp-route-currentFilter="@Model.CurrentFilter">
                    @Html.DisplayNameFor(model => model.HandyMember[0].FirstName)
                </a>
            </th>
            
            
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].AptNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].Street)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CitySort">
                    @Html.DisplayNameFor(model => model.HandyMember[0].City)
                </a>
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].ZIP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HandyMember[0].Tasker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HandyMember)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AptNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZIP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasker)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HandyMember.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HandyMember.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.HandyMember.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.HandyMember.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-default @nextDisabled">
    Next
</a>

