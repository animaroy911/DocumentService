@page "{id:int?}"
@model DocumentService.Pages.HandyMembers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>HandyMember</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.AptNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.AptNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.ZIP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.ZIP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.Photo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.Photo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HandyMember.Tasker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HandyMember.Tasker)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.HandyMember.MemberServices)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Job Type</th>
                    <th>Rate</th>
                </tr>
                @foreach (var item in Model.HandyMember.MemberServices)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobType.TaskName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
